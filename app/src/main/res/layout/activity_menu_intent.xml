<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuIntentActivity">

    <Button
        android:id="@+id/btn_menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="MainActivity"
        android:onClick="onClickmainActivity"
        />

    <Button
        android:id="@+id/btn_menu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ajouter un article"
        android:onClick="onClickmainInsert"
        />

    <Button
        android:id="@+id/btn_menu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_menu2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Liste des articles"
        android:onClick="onClickmainlist"
        />



</androidx.constraintlayout.widget.ConstraintLayout>